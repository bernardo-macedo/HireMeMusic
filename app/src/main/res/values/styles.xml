<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Search -->
    <style name="SearchTitle">
        <item name="android:layout_marginTop">@dimen/search_title_margin_vertical</item>
        <item name="android:textSize">@dimen/search_title_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="SearchResultTitle">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/search_result_title_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>
